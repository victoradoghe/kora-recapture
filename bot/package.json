    "cors": "^2.8.5",
    "commander": "^12.1.0",
    "bs58": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.5.0",
