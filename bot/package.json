  "description": "Automated rent-reclaim system for Kora node operators",
  "main": "dist/cli.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "scheduler": "tsx src/scheduler.ts",
