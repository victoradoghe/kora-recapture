# Kora-Recapture Bot Environment Configuration

# Solana Network Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# Operator Credentials (KEEP SECURE! NEVER COMMIT THIS FILE!)
# Use base58 encoded private key
OPERATOR_PRIVATE_KEY=your_base58_private_key_here

# Safety Settings
DRY_RUN=true
INACTIVITY_DAYS=30
EMERGENCY_STOP_FILE=./data/state/emergency.json
WHITELIST_FILE=./data/whitelist.json

# Scheduling (cron format)
# Default: Every 6 hours
CRON_SCHEDULE=0 */6 * * *

# API Server (for dashboard integration)
API_PORT=3001
API_ENABLED=true
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=./data/logs/reclaim.log

# Performance
MAX_SIGNATURES_PER_REQUEST=1000
REQUEST_DELAY_MS=100

# Alerts & Notifications
ALERTS_ENABLED=false
ALERT_THRESHOLD_SOL=10
ALERT_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL_HERE
ALERT_CHECK_INTERVAL=60
